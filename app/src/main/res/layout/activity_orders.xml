<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".orders"
    android:background="#F9F9FB">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="@font/seguisb"
        android:text="Orders"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:background="@color/orange90"
        android:textAlignment="center"
        android:id="@+id/profileheader"/>

    <LinearLayout
        android:id="@+id/card1"
        android:layout_width="360dp"
        android:layout_height="115dp"
        android:layout_below="@id/profileheader"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:background="@drawable/orders_bg"
        android:elevation="9dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="83dp"
            android:layout_height="69dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="19dp"
            android:src="@drawable/pizza1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/seguisb"
                android:text="Pepperoni Pizza"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui"
                android:text="27 Oct 2021"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/bold"
                android:text="₹210 X 1"
                android:textColor="#FE554A"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="48dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/bold"
                android:text="₹210"
                android:textColor="#FE554A"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/track1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27px"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/segoeui"
                android:text="@string/order"
                android:textColor="#FE554A"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/card2"
        android:layout_width="350dp"
        android:layout_height="115dp"
        android:layout_below="@id/card1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/orders_bg"
        android:elevation="9dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="83dp"
            android:layout_height="69dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="19dp"
            android:src="@drawable/burger1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/seguisb"
                android:text="Chicken Burger"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui"
                android:text="15 Oct 2021"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/bold"
                android:text="₹200 X 2"
                android:textColor="#FE554A"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="48dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/bold"
                android:text="₹400"
                android:textColor="#FE554A"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/track2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27px"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/segoeui"
                android:text="@string/order"
                android:textColor="#FE554A"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/support"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="80dp"
        android:src="@drawable/message"
        app:backgroundTint="@color/orange90"
        app:elevation="6dp"
        app:tint="@android:color/white" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/footer"
        app:itemBackground="@color/footerbg"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/footer"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>